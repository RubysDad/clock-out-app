<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Heavy Laden App Alert", sticky: false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Heavy Laden App Error", sticky: false) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "Heavy Laden App Notification", sticky: false) %>
<% end %>